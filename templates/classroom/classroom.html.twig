{% extends 'base.html.twig' %}

{% block title %}
    Liste des classes - {{parent()}}
{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2 class="fw-bold mb-4 text-muted text-center" style="text-shadow: 8px 6px 10px rgba(0, 0, 0, 0.350);">Liste des classes</h2>
        </div>

        <div class="col-md-12">
            <ul style="width: 600px;" class="list-group list-group-flush mx-auto">
                    <li class="list-group-item text-center fw-bold fst-italic">Veuillez séléctionner un niveau :</li>
            </ul>
            <table style="width: 800px;" class="table  list-group-flush mx-auto">
            <tbody>
                <tr>
                    <th><a href="#" class="nolink"> 6 ème</a></th>
                    <th><a href="#" class="nolink"> 5 ème</a></th>
                    <th><a href="#" class="nolink"> 4 ème</a></th>
                    <th><a href="#" class="nolink"> 3 ème</a></th>
                </tr>
            </tbody>
            </table> 
        </div>

        <div class="col-md-12">
            <ul class="list-group list-group-flush mx-auto" style="width: 300px;">
                {% for class in classrooms %}
                    {% if class.grade == 6 %}
                   <li class="list-group-item text-center fst-italic">{{class.grade}} ème {{class.letter}}</li>
                    {% endif %}
                {% endfor %}
            </ul>
                
            
            
        </div>

    </div>
</div>

{% endblock %}
